<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage"
             Title="Calculator"
             BackgroundColor="#1e1e1e">

    <Grid RowDefinitions="2*, *, *, *, *, *" 
          ColumnDefinitions="*, *, *, *">        

        <!-- Display -->
        <Border Grid.Row="0" Grid.ColumnSpan="4" 
                BackgroundColor="#2d2d2d" 
                Stroke="Transparent"
                StrokeThickness="0"
                Margin="10,20,10,10"
                Padding="20">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <StackLayout Orientation="Vertical" VerticalOptions="End">
                <Label x:Name="ExpressionLabel"
                   Text=""
                   FontSize="{OnPlatform Default=16, Android=20}"
                   TextColor="Gray"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Start"
                   LineBreakMode="NoWrap" />
                <Label x:Name="DisplayLabel"
                   Text="0"
                   FontSize="{OnPlatform Default=48, Android=24}"
                   TextColor="White"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="End"
                   LineBreakMode="NoWrap" />
            </StackLayout>
            
        </Border>

        <!-- Row 1: Clear, DEL, %, ÷ -->
        <Button Grid.Row="1" Grid.Column="0" 
                Text="C" 
                Clicked="OnClearClicked"
                BackgroundColor="#a6a6a6"
                TextColor="Black"
                FontSize="24"
                Margin="5"/>

        <Button Grid.Row="1" Grid.Column="1" 
                Text="DEL" 
                Clicked="OnDeleteClicked"
                BackgroundColor="#a6a6a6"
                TextColor="Black"
                FontSize="24"
                Margin="5" />

        <Button Grid.Row="1" Grid.Column="2" 
                Text="%" 
                Clicked="OnPercentClicked"
                BackgroundColor="#a6a6a6"
                TextColor="Black"
                FontSize="24"
                Margin="5" />

        <Button Grid.Row="1" Grid.Column="3" 
                Text="÷" 
                Clicked="OnOperatorClicked"
                BackgroundColor="#ff9500"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <!-- Row 2: 7, 8, 9, × -->
        <Button Grid.Row="2" Grid.Column="0" 
                Text="7" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="2" Grid.Column="1" 
                Text="8" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="2" Grid.Column="2" 
                Text="9" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="2" Grid.Column="3" 
                Text="×" 
                Clicked="OnOperatorClicked"
                BackgroundColor="#ff9500"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <!-- Row 3: 4, 5, 6, - -->
        <Button Grid.Row="3" Grid.Column="0" 
                Text="4" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="3" Grid.Column="1" 
                Text="5" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="3" Grid.Column="2" 
                Text="6" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="3" Grid.Column="3" 
                Text="-" 
                Clicked="OnOperatorClicked"
                BackgroundColor="#ff9500"
                TextColor="White"
                FontSize="40"
                Margin="5" />

        <!-- Row 4: 1, 2, 3, + -->
        <Button Grid.Row="4" Grid.Column="0" 
                Text="1" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="4" Grid.Column="1" 
                Text="2" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="4" Grid.Column="2" 
                Text="3" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="4" Grid.Column="3" 
                Text="+" 
                Clicked="OnOperatorClicked"
                BackgroundColor="#ff9500"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <!-- Row 5: 0, +/-, ., = -->
        <Button Grid.Row="5" Grid.Column="0" 
                Text="0" 
                Clicked="OnNumberClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="5" Grid.Column="1" 
                Text="±" 
                Clicked="OnPlusMinusClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />   

        <Button Grid.Row="5" Grid.Column="2" 
                Text="." 
                Clicked="OnDecimalClicked"
                BackgroundColor="#333333"
                TextColor="White"
                FontSize="32"
                Margin="5" />

        <Button Grid.Row="5" Grid.Column="3" 
                Text="=" 
                Clicked="OnEqualsClicked"
                BackgroundColor="#ff9500"
                TextColor="White"
                FontSize="32"
                Margin="5" />
    </Grid>

</ContentPage>
